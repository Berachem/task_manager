{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

<div class="row justify-content-center">

    <div class="col-md-8">
<h1>User</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>
                {% for role in app.user.roles %}
                            <span class="badge bg-{{ role == 'ROLE_ADMIN' ? 'danger' : 'success' }}">{{ role }}</span>
                        {% endfor %}
            </td>
        </tr>
    </tbody>
</table>
<div class="d-flex justify-content-between mt-3">
<a href="{{ path('app_admin_index') }}" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back to list</a>

<a href="{{ path('app_admin_edit', {'id': user.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i> Edit</a>

    {{ include('admin/_delete_form.html.twig') }}
</div>

</div>

</div>


{% endblock %}
