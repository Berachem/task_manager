{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}


<div class="row justify-content-center">

    <div class="col-md-8">
    <h1>Category</h1>
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th class="w-25">Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Tasks in this category</th>
                    <td>
                        {% for task in category.tasks %}
                           <li>
                            <a href="{{ path('app_task_show', {'id': task.id}) }}">
                                <span class="badge bg-dark">
                                {{ task.title }}
                                </span>
                            </a>
                        </li>
                        {% else %}
                            <p>No tasks in this category</p>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Creation Date</th>
                    <td>{{ category.creationDate ? category.creationDate|date('d/m/Y Ã  H\\hi') : '' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('app_category_index') }}" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back to List</a>
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i> Edit</a>
                {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
</div>


{% endblock %}
