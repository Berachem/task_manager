{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>üìù Task index <i>({{ tasks|length }})</i></h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Categories</th>
                    <th>Creation Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.id }}</td>
                        <td>{{ task.title }}</td>
                        <td>{{ task.description }}</td>
                        <td>
                            <ul>
                                {% for category in task.categories %}
                                    <li>
                                        <a href="{{ path('app_category_show', {'id': category.id}) }}">
                                            <span class="badge bg-info">
                                            {{ category.name }}
                                            </span>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td>{{ task.creationDate ? task.creationDate|date('d/m/Y √† H\\hi') : '' }}</td>
                        <td> 
                            <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-info"><i class="fa fa-eye"></i></a>
                            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>

                            {{ include('task/_delete_form.html.twig', {'id': task.id}) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_task_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Create new</a>
        </div>
    </div>
</div>

{% endblock %}
