{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Task</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ task.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ task.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ task.description }}</td>
                </tr>
                <tr>
                    <th>Categories</th>
                    <td>
                        <ul>
                                {% for category in task.categories %}
                                    <li>
                                        <a href="{{ path('app_category_show', {'id': category.id}) }}">
                                            <span class="badge bg-info">
                                            {{ category.name }}
                                            </span>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                    </td>
                <tr>
                    <th>Creation Date</th>
                    <td>{{ task.creationDate ? task.creationDate|date('d/m/Y Ã  H\\hi') : '' }}</td>
                </tr>


            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('app_task_index') }}" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back to List</a>
            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i> Edit</a>

            {{ include('task/_delete_form.html.twig', {'id': task.id}) }}
        </div>
        
    </div>
</div>
{% endblock %}
